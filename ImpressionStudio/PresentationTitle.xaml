<Window x:Class="ImpressionStudio.PresentationTitleWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" Height="74.662" Width="300"
        Title="Enter Title For Presentation" WindowStartupLocation="CenterScreen">
    <Grid>
        <TextBox x:Name="txtTitle" VerticalAlignment="Center" HorizontalAlignment="Left" Width="200" />
        <Button x:Name="btnOk" VerticalAlignment="Center" HorizontalAlignment="Right" Width="80" Content="OK"
                Click="btnOk_Click" />
    </Grid>
</Window>